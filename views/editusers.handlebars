<h1>Editando o usuário: {{users.name}}</h1>
<form action="/users/update" method="POST" class="form">
<input type="hidden" name="id" value="{{users.id}}">
<div class="form-control">
    <label for="name">Nome:</label>
    <input type="text" name="name" placeholder="Digite o nome do usuário" value="{{users.name}}"> 
</div>
<div class="form-control">
    <label for="occupation">Ocupação:</label>
    <input type="text" name="occupation" placeholder="DIgite a profissao" value="{{users.occupation}}">
</div>
<div class="form-control form-checkbox"><br>
    <input type="checkbox" name="newsletter" checked>
    <label for="newsletter">Enviar promoções?</label>
</div>
<input type="submit" value="SALVAR">
</form>
<div class="address-container">
  <h2>Endereços:</h2>
  <form action="/address/create" method="POST">
   <input type="text" name="UserId" value="{{users.id}}">
   <div class="form-control">
          <label for="street">Rua:</label>
          <input type="text" name="street" placeholder="Digite a rua">
   </div>
   <div class="form-control">
          <label for="number">Numero:</label>
          <input type="text" name="number" placeholder="Digite o número da residencia">
   </div>
   <div class="form-control">
          <label for="city">Cidade:</label>
          <input type="text" name="city" placeholder="Digite a cidade">          
   </div>
   <input type="submit" value="Incluir">
  </form>
  <div class="address-list">
      <h2>Lista de endereços:</h2>
      {{#each users.Addresses}}
       <div>#{{this.id}} - {{this.street}} - {{this.number}} - {{this.city}}
    <form action="/address/delete" method="POST"> 

       <input type="hidden" name="UserId" value="{{users.id}}">
        <input type="hidden" name="id" value="{{this.id}}">
         <input type="submit" value="excluir">
       </form>
        {{/each}}
       </div>
  </div>
</div>